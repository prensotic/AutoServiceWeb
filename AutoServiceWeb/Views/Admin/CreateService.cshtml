@{
    Layout = "_DashboardLayout";
}

<form method="post">
    <div>
        <h1>Создание услуги</h1>
        <div>
            <input name="Title" />
        </div>
        <div>
            <input name="Price" type="number" />
        </div>
        <div>
            <input name="Discount" type="number" max="100" min="0" />
        </div>
        <div>
            <input name="Time" />
        </div>
        <div>
            <input name="MainImage" />
        </div>
        <div class="service_buttons">
            <button type="submit">Создать</button>
            <a href="/Admin/Services"><button type="button">Отмена</button></a>
        </div>
    </div>
</form>