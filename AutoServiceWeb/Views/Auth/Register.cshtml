@{
    Layout = "_AuthLayout";
}


<form method="post" class="auth_form">
    <h1>Регистрация</h1>
    <div>
        <input placeholder="Введите ФИО..." type="text" name="FullName" />
    </div>
    <div>
        <input placeholder="Введите номер Телефона" type="number" name="Phone" />
    </div>
    <div>
        <input placeholder="Введите Почту" type="email" name="Email" />
    </div>
    <div>
        <input placeholder="Введите Пароль" type="password" name="Password" />
    </div>
    <div class="auth_buttons">
        <button type="submit">Зарегистрироваться</button>
        <p>Или</p>
        <button type="button"><a href="/Auth/Login">Уже есть аккаунт</a></button>
    </div>
</form>